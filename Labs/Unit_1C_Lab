using System; 

public class Exercise11 
{  
    public static void Main()  
    {
        int i, j, numRows; 
        Console.Write("Input number of rows for number pyramid : ");  
        numRows = Convert.ToInt32(Console.ReadLine());  

        for (i = 1; i <= numRows; i++)  
        {
            for (j = 1; j <= i; j++) 
            {
                Console.Write("{0}", i); 
            }
            Console.Write("\n");
        }
    }
}